<!doctype html>
<html ng-cloak ng-app="app-login">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <title>@Html.Raw(YangKai.BlogEngine.Common.Config.Literal.SITE_NAME) Manage - Login</title>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/style/admin-css")
        @Scripts.Render("~/admin-js")
    </head>

    <body class="login-layout">
        <div class="main-container">
            <div class="main-content">
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <div class="login-container" style="width: 675px;">
                            <div class="center">
                                <h1>
                                    <i class="icon-bug green"></i>
                                    <span class="red">@Html.Raw(YangKai.BlogEngine.Common.Config.Literal.SITE_NAME)</span>
                                    <span class="white">Management</span>
                                </h1>
                                <h4 class="blue">&copy; Zack Yang</h4>
                            </div>

                            <div class="space-6"></div>

                            <div class="position-relative" ng-controller="LoginController" style="width: 375px;margin: auto;">
                                <div id="login-box" class="login-box visible widget-box no-border">
                                    <div class="widget-body">
                                        <div class="widget-main">
                                            <h4 class="header blue lighter bigger">
                                                <i class="icon-coffee green"></i>
                                                Please Enter Your Information
                                            </h4>

                                            <div class="space-6"></div>

                                            <form name="form" ng-submit="signin()">
                                                <fieldset>
                                                    <label class="block clearfix">
                                                        <span class="block input-icon input-icon-right">
                                                            <input type="text" class="form-control" placeholder="Username" ng-model="user.Username" required />
                                                            <i class="icon-user"></i>
                                                        </span>
                                                    </label>

                                                    <label class="block clearfix">
                                                        <span class="block input-icon input-icon-right">
                                                            <input type="password" class="form-control" placeholder="Password" ng-model="user.Password" required />
                                                            <i class="icon-lock"></i>
                                                        </span>
                                                    </label>

                                                    <div class="space"></div>

                                                    <div class="clearfix">
                                                        <label class="inline">
                                                            <input type="checkbox" class="ace" ng-init="user.IsRemember=false" ng-model="user.IsRemember" />
                                                            <span class="lbl"> Remember Me</span>
                                                        </label>

                                                        <button class="width-35 pull-right btn btn-sm btn-primary" ng-disabled="submitting || form.$invalid">
                                                            <span ng-show="submitting"><i class="icon-spinner icon-spin icon-large"></i></span>                                                            
                                                            <span ng-hide="submitting"><i class="icon-key"></i></span>                                                            
                                                            Login
                                                        </button>
                                                    </div>

                                                    <div class="space-4"></div>
                                                </fieldset>
                                            </form>

                                            <div class="social-or-login center">
                                                <span class="bigger-110 red">{{error}}</span>
                                            </div>
                                        </div>
                                        <div class="toolbar clearfix"><p>&nbsp;</p></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>